.bottom-box{
    width:100%;
    height:100rpx;
    /* Firefox */
    display:-moz-box;
    -moz-box-pack:center;
    -moz-box-align:center;

    /* Safari, Chrome, and Opera */
    display:-webkit-box;
    -webkit-box-pack:center;
    -webkit-box-align:center;

    /* W3C */
    display:box;
    box-pack:center;
    box-align:center;
}
.view-box {
    opacity: 0;
    position: relative;
    background-color: #fff;
    line-height: 1.41176471;
    font-size: 24rpx;
    transform: translateY(-50%);
    transition: 0.3s;
    background-color: rgb(240, 240, 240);
}
  
.view-box-show {
    opacity: 1;
    transform: translateY(0);
}
  
.view {
    padding: 20rpx 30rpx;
    position: relative;
    display: flex;
    align-items: center;
}
  
.view:before {
    content: " ";
    position: absolute;
    left: 30rpx;
    top: 0;
    right: 30rpx;
    height: 1px;
    border-top: 1rpx solid #d8d8d8;
    color: #d8d8d8;
}
  
.view:first-child:before{
    display: none;
}
  
  .view-text {
    flex: 1;
    font-size:24rpx;
  }
  
  .view-arrow {
    padding-right: 26rpx;
    position: relative;
  }
  
  .view-arrow:after {
    content: " ";
    display: inline-block;
    height: 18rpx;
    width: 18rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #888;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 28rpx;
  }
  
  .kind-list-item {
    margin: 20rpx 0;
    background-color: #fff;
    border-radius: 4rpx;
    overflow: hidden;
    border-bottom: 1px dashed #888;
  }
  
  .kind-list-item:first-child {
    margin-top: 0;
  }
  
  .kind-list-text {
    flex: 1;
  }
  
  .kind-list-item-hd {
    padding:20rpx 0;
    padding-left: 30rpx;
    font-size:24rpx;
    color:grey;
    display: flex;
    align-items: center;
    transition: opacity 0.3s;
    background-color: rgb(240, 240, 240);
  }
  
  .kind-list-item-hd-show {
    color:black;
  }
  
  .kind-list-item-bd {
    height: 0;
    overflow: hidden;
  }
  
  .kind-list-item-bd-show {
    height: auto;
  }
  